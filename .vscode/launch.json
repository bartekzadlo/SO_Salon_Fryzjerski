{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug projekt_fryzjer", // Wybierz odpowiednią nazwę
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/projekt_fryzjer", // Ścieżka do programu
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Włącz debugowanie GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build", // Użyj tej wersji
            "serverLaunchTimeout": 10000,
            "filterStdout": true,
            "filterStderr": true,
            "logging": {
                "moduleLoad": false,
                "trace": true,
                "traceResponse": true,
                "engineLogging": false
            },
            "sourceFileMap": {
                "/usr/include": "${workspaceFolder}/include"
            }
        }
    ]
}